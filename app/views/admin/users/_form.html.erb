<%= simple_form_for([:admin,@user]) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
  <%= f.input(:first_name, autofocus: true, placeholder: 'First name', class: 'form-control') %>

  <%= f.input(:last_name, autofocus: true, placeholder: 'Last name', class: 'form-control') %>
 <%= f.input(:email, placeholder: 'Hello@youremail.com', class: 'form-control') %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
